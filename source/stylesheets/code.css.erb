// Brings in CSS, leave this file as .css
<%= Rouge::Themes::Github.render(:scope => '.highlight') %>

code {
  padding: 0 0.5em;
  border: 1px solid #ddd;
  border-radius: 3px;
  background: white;
}

.code-title {
  color: #aaa;
  font-size: 15px;
  font-weight: 300;
  margin: 1.5em 0 -0.5em;
}

.highlight {
  position: relative;
  z-index: 1;
  border: 1px solid #ddd;
  margin-bottom: 5em;
  border-radius: 3px;
  background: mix(white, $offwhite, 80%);
  overflow: scroll;
  font-size: 13px;
  line-height: 1.5em;
}

.highlight:after {
  position: absolute;
}

.highlight .gutter {
  padding-right: 0.5em;
  color: mix($gray, $offwhite);
  background: mix($gray, $offwhite, 10%);
}
